<h2><%= t('.latest_activity')%></h2>
<% if @recent_activity.any? %>
  <ul class='clickable'>
    <% @recent_activity.each do |change| %>
      <li class='<%= cycle("on", "on-hover", :name => 'recent_activity_cycle') %>'>
        <%= activity_message_for change %>
      </li>
    <% end %>
  </ul>
</div>
