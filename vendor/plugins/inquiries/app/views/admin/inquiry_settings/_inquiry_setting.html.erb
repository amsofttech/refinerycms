<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <span class='actions'>
      <%= link_to refinery_icon_tag("application_edit.png", :alt => "Edit"), edit_admin_inquiry_setting_path(inquiry_setting) %>
      <%= link_to refinery_icon_tag("delete.png", :alt => "Delete"), admin_inquiry_setting_path(inquiry_setting),
                        :confirm => "Are you sure you want to delete #{inquiry_setting.name}?",
                        :class => "cancel", :method => :delete ,
                        :title => "Remove this inquiry inquiry_setting forever"  if inquiry_setting.destroyable? %>
    </span>
    <span><%= t(inquiry_setting.name.to_sym, :default => inquiry_setting.name) %></span>
  </span>
</li>