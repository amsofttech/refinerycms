<div id='actions'>
  <h2><%= t :Details, :default => "Details" %></h2>
  <p>
    <strong><%= t :Status, :default => "Status" %>:</strong>
    <%= @inquiry.open? ? "#{t :Open, :default => "Open"}" : "#{t :Closed, :default => "Closed"}" %>
    <br/>
    <strong><%= t :Age, :default => "Age" %>:</strong> <%= time_ago_in_words(@inquiry.created_at) %>
  </p>
  <h2><%= t :Actions, :default => "Actions" %></h2>
  <ul>
    <li>
      <%= link_to "Back to all Inquiries", {:action => 'index'}, :class => "back_icon" %>
    </li>
  </ul>
</div>
<div id='records'>
  <h2><%= t :Inquiry, :default => "Inquiry" %></h2>
  <table id='inquiry'>
    <tr>
      <td>
        <strong><%= t :To, :default => "To" %></strong>
      </td>
      <td>
        <%= RefinerySetting[:site_name] %>
      </td>
    </tr>
    <tr>
      <td>
        <strong><%= t :From, :default => "From" %></strong>
      </td>
      <td>
        <%= @inquiry.name %> [<%= mail_to @inquiry.email, @inquiry.email, {:title => "#{t :Click_to_email, :default => "Click to email this address"}"} %>]
      </td>
    </tr>
    <% unless @inquiry.phone.blank? %>
      <tr>
        <td>
          <strong><%= t :Phone, :default => "Phone" %></strong>
        </td>
        <td>
          <%= @inquiry.phone %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>
        <strong><%= t :Date, :default => "Date" %></strong>
      </td>
      <td>
        <%= @inquiry.created_at.strftime("%A, %d of %b, %Y") %>
      </td>
    </tr>
    <tr>
      <td valign='top'>
        <strong><%= t :Message, :default => "Message" %></strong>
      </td>
      <td>
        <p style='margin-top: 0px'>
          <%= @inquiry.message.gsub("\r\n\r\n", "\r\n").gsub("\r\n", "</p><p>") %>
        </p>
      </td>
    </tr>
  </table>
</div>
