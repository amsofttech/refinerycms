<% form_for :user do |f| -%>
  <%= f.error_messages %>
  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email, :class => "larger" %>
  </div>
  <div class='form-actions'>
    <div class='form-actions-left'>
      <%= submit_tag 'Reset password', :class => 'button' %>
      <%= link_to "Cancel", login_url, :class => 'close_dialog button' %>
    </div>
  </div>
<% end -%>
<% content_for :header, "Please enter the email address for your account." %>
