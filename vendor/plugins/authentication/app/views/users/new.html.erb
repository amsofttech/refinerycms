<%= error_messages_for :user %>
<p>
  <%= t('.fill_form') %>
</p>
<% form_for :user, :url => users_path do |f| -%>
  <div class='field'>
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>
  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <% if just_installed? %>
    <% Refinery::Plugins.registered.names.each do |name| %>
      <%= hidden_field_tag 'user[plugins][]', name, :id => "plugins_#{name}"  %>
    <% end %>
  <% end %>
  <p><%= submit_tag t('.sign_up') %></p>
<% end -%>
