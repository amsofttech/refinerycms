<% form_for :user do |f| -%>
  <%= f.error_messages %>
  <p>Pick a new password for <%= @user.email %></p>
  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class='form-actions'>
    <div class='form-actions-left'>
      <%= submit_tag 'Reset password', :class => 'button' %>
      <%= link_to "Cancel", login_url, :class => 'close_dialog button' %>
    </div>
  </div>
<% end -%>
