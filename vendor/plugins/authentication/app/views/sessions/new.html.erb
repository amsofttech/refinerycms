<% form_for :session, @session, :url => session_path do |f| -%>
  <%= f.error_messages %>
  <div class='clearfix'>
    <div class='field session_username'>
      <%= f.label Refinery.authentication_login_field, t(".#{Refinery.authentication_login_field.downcase}") %>
      <%= f.text_field Refinery.authentication_login_field %>
    </div>
    <div class='field session_password'>
      <%= f.label :password, t('.password') %>
      <%= f.password_field :password, :autocomplete => 'off' %>
    </div>
  </div>
  <div class='field forgot_password'>
    <%= link_to t('.forgot_password'), forgot_url %>
  </div>
  <div class='field remember_me'>
    <%= f.label t('.remember_me'), nil %>
    <%= f.check_box :remember_me %>
  </div>
  <div class='form-actions'>
    <%= submit_tag t('.log_in') %>
    <%= t '.or' %>
    <%= link_to t('.cancel'), root_url %>
  </div>
<% end -%>
