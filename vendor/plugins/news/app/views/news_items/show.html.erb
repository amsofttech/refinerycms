<% content_for :title, "#{@news_item.title} - " -%>
<div id='body_content' class='clearfix'>
  <div id='body_content_left' class='clearfix'>
    <h1>
      <%= @news_item.title %>
    </h1>
    <p>
      <small><%=t('.published_at', :at => l(@news_item.publish_date, :format => :long)) %></small>
    </p>
    <%= @news_item.body %>
    <p>
      <%= link_to t('.back_to_index'), news_items_url %>
    </p>
  </div>
  <div id='body_content_right' class='clearfix'>
    <%= render :partial => 'recent_posts' %>
  </div>
</div>
