<div class="hemisquare right_side">
  <h2>Search Engine Optimization</h2>
  <div class='field'>
    <span class='label_with_help'>
     <%= f.label :browser_title %>
     <%= refinery_help_tag 'Enter a 5-10 word title that summarizes the contents of this page.'%>
    </span>
    <%= f.text_field :browser_title, :class => 'widest' %>
  </div>
  <div class='field'>
    <span class='label_with_help'>
     <%= f.label :meta_keywords %>
     <%= refinery_help_tag 'Enter 5-10 keywords that relate to this page. Separate keywords by a comma.' %>
    </span>
    <%= f.text_field :meta_keywords, :class => 'widest' %>
  </div>
  <div class='field'>
    <span class='label_with_help'>
     <%= f.label :meta_description %>
     <%= refinery_help_tag 'Enter a concise two or three sentences describing what this page is about.' %>
    </span>
    <%= f.text_area :meta_description, :class => 'widest', :rows => 7 %>
  </div>
</div>
